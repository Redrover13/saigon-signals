{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@dulce-de-saigon/shared-utils": [
        "libs/shared/shared-utils/src/index.ts"
      ],
      "@dulce-de-saigon/shared-types": [
        "libs/shared/shared-types/src/index.ts"
      ],
      "@dulce-de-saigon/gcp-core": ["libs/gcp/gcp-core/src/index.ts"],
      "@dulce-de-saigon/gcp-vertex-ai": ["libs/gcp/gcp-vertex-ai/src/index.ts"],
      "@dulce-de-saigon/gcp-firestore": ["libs/gcp/gcp-firestore/src/index.ts"],
      "@dulce-de-saigon/gcp-pubsub": ["libs/gcp/gcp-pubsub/src/index.ts"],
      "@dulce-de-saigon/domain-nlp": ["libs/domain/domain-nlp/src/index.ts"]
    }
  }
}
